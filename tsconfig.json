{
    "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "esnext",
      "target": "es5",
      "jsx": "react",
      "allowJs": true,
      "sourceMap": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
    },
    "include" : ["src"],
    "exclude": ["node_modules", "dist", "config", ".vscode"]
}
